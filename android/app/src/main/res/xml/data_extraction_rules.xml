<?xml version="1.0" encoding="utf-8"?>
<!--
    Data extraction rules for Android 12+ (API 31+)
    
    This file defines what data can be extracted when the user transfers
    the app to a new device using Android's data transfer feature.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include all SharedPreferences for cloud backup -->
        <include domain="sharedpref" path="." />
        <include domain="sharedpref" path="FlutterSecureStorage" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include all SharedPreferences for device transfer -->
        <include domain="sharedpref" path="." />
        <include domain="sharedpref" path="FlutterSecureStorage" />
    </device-transfer>
</data-extraction-rules>

